<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/flipping_toast_corners"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp" >

    <com.anroidcat.acwidgets.flippingdialog.FlippingImageView
        android:id="@+id/loadingdialog_fiv_icon"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:src="@drawable/author_logo" />

    <TextView
        android:id="@+id/loadingdialog_htv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>