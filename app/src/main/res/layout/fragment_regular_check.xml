<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_bg">
    <!--title部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_bg">

        <LinearLayout
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp">
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="2018年11月20日 周六"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buildingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/dateView"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:layout_marginLeft="40dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:src="@mipmap/building"/>
            <TextView
                android:id="@+id/buildingTv"
                android:background="@drawable/shape_gray_radius3"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:textSize="13sp"
                android:text="教学中心"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                />
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/triangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/regularRb"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="当日考评"
                    android:textColor="@color/white"
                    android:checked="true"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/top_label_check"
                    />
                <RadioButton
                    android:id="@+id/selfManagerRb"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:text="当日统计"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/top_label_check"
                    />
                <RadioButton
                    android:id="@+id/exerciseManagerRb"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:text="历史纪录"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:button="@null"
                    android:clickable="true"
                    android:background="@drawable/top_label_check"
                    />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <!--下半部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <include layout="@layout/menu_regular_check" />
        <include
            android:id="@+id/rcBuilding"
            layout="@layout/sub_rc_building"/>
    </LinearLayout>
</LinearLayout>