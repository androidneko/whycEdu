<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考评标准:全校范围内,A占30%,B占40%,C占30%"
                    android:textColor="@color/text_black2"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_weight="5">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="自我管理"
            android:textSize="26sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_centerInParent="true"
                android:text="晨读"
                android:textSize="30sp"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@mipmap/mark_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="班级评分"
                android:textColor="@color/text_black"
                android:textSize="26sp"/>

            <LinearLayout
                android:id="@+id/markTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/aRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/bRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/cRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="纪录"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@mipmap/marka"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <View
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/melon_bean"
            android:layout_marginTop="-50dp"/>
    </LinearLayout>
</LinearLayout>