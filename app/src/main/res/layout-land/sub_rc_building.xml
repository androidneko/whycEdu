<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考评标准:全校范围内,A占30%,B占40%,C占30%"
                    android:textColor="@color/text_black2"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/classTv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/class_bg"
            android:text="请选择"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">

            <!--钟楼-->
            <RelativeLayout
                android:id="@+id/clockBuilding"
                android:layout_width="wrap_content"
                android:layout_height="490dp"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/clockGridHeader"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="1F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/clockBuildingGrid"
                    android:layout_toRightOf="@+id/clockGridHeader"
                    android:layout_width="450dp"
                    android:layout_height="490dp"
                    android:layout_marginLeft="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="2"
                    android:columnWidth="130dp">
                </GridView>

            </RelativeLayout>

            <!--教学中心-->
            <RelativeLayout
                android:id="@+id/tsCenter"
                android:layout_width="wrap_content"
                android:layout_height="515dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/tsCenterHeader"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:text="6F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="5F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:text="4F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/tsCenterHeaderBuilding"
                    android:layout_toRightOf="@+id/tsCenterHeader"
                    android:layout_width="565dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="7"
                    android:columnWidth="50dp">
                </GridView>

            </RelativeLayout>

            <!--东楼-->
            <RelativeLayout
                android:id="@+id/eastBuilding"
                android:layout_width="wrap_content"
                android:layout_height="375dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:id="@+id/eastGridHeader"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:text="4F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/shape_blue_radius10"
                        android:layout_marginTop="5dp"
                        android:text="1F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/eastBuildingGrid"
                    android:layout_toRightOf="@+id/eastGridHeader"
                    android:layout_width="565dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="9"
                    android:columnWidth="50dp">
                </GridView>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/menuParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="自我管理"
            android:textSize="26sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/markMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_centerInParent="true"
                android:text="经典诵读"
                android:textSize="30sp"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="350dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_white_border_radius10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="班级评分"
                android:textColor="@color/text_black"
                android:textSize="26sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/markTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/aRb"
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:background="@drawable/marka_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/bRb"
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/markb_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/cRb"
                        android:layout_width="57dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/markc_label_check"
                        android:button="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>
            <ImageView
                android:id="@+id/markHeart"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <View
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/melon_bean"
            android:layout_marginTop="-30dp"/>
    </LinearLayout>
</LinearLayout>