<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考评标准:全校范围内,A占30%,B占40%,C占30%"
                    android:textColor="@color/text_black2"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">

            <!--钟楼-->
            <RelativeLayout
                android:id="@+id/clockBuilding"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/clockGridHeader"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/room_bg"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="1F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/clockBuildingGrid"
                    android:layout_toRightOf="@+id/clockGridHeader"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:numColumns="2"
                    android:columnWidth="80dp">
                </GridView>

            </RelativeLayout>

            <!--教学中心-->
            <RelativeLayout
                android:id="@+id/tsCenter"
                android:layout_width="wrap_content"
                android:layout_height="395dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/tsCenterHeader"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/room_bg"
                        android:text="6F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="5F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/room_bg"
                        android:text="4F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/tsCenterHeaderBuilding"
                    android:layout_toRightOf="@+id/tsCenterHeader"
                    android:layout_width="380dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:numColumns="7"
                    android:columnWidth="45dp">
                </GridView>

            </RelativeLayout>

            <!--东楼-->
            <RelativeLayout
                android:id="@+id/eastBuilding"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                >
                <LinearLayout
                    android:id="@+id/eastGridHeader"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/room_bg"
                        android:text="4F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="3F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="2F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/room_bg"
                        android:layout_marginTop="5dp"
                        android:text="1F"
                        android:gravity="center"
                        android:textColor="@color/text_black2"
                        android:textSize="18sp"/>
                </LinearLayout>
                <GridView
                    android:id="@+id/eastBuildingGrid"
                    android:layout_toRightOf="@+id/eastGridHeader"
                    android:layout_width="445dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:numColumns="9"
                    android:columnWidth="45dp">
                </GridView>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="自我管理"
            android:textSize="26sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_centerInParent="true"
                android:text="晨读"
                android:textSize="30sp"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@mipmap/mark_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="班级评分"
                android:textColor="@color/text_black"
                android:textSize="26sp"/>

            <LinearLayout
                android:id="@+id/markTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/aRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/bRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        />
                    <RadioButton
                        android:id="@+id/cRb"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/top_label_check"
                        android:button="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="纪录"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@mipmap/marka"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <View
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/melon_bean"
            android:layout_marginTop="-50dp"/>
    </LinearLayout>
</LinearLayout>